
azul = #22BCE0
gris_oscuro = #444
gris_texto = #7A7A7A
naranja = #DD4F24

@font-face {
	font-family: 'icomoon';
	src:url('../fuentes/icomoon.eot?kpv1ys');
	src:url('../fuentes/icomoon.eot?#iefixkpv1ys') format('embedded-opentype'),
		url('../fuentes/icomoon.woff?kpv1ys') format('woff'),
		url('../fuentes/icomoon.ttf?kpv1ys') format('truetype'),
		url('../fuentes/icomoon.svg?kpv1ys#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

a 
	color naranja

body
	background #E8E8E8
	color gris_oscuro
	font-family Arial
	font-size 16px
	transition font-size 1s
	
footer
	background naranja
	color rgba(white,0.5)
	text-align center
	padding 1em 0
	margin 0
	width 100%
	
	
	h3 
		font-size 14px
		font-weight normal
		
		
			
	strong
		display block
		
	span
		&:before
			content"-"
		&:after
			content"-"
		
form
	padding 0.8em
	display none
	
	label
		display inline-block
		width 60px
					
header
	background gris_oscuro
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	color white
	overflow hidden
	padding 0.5em
	position relative
	z-index 1
	
	
	.logo
		border-right 1px solid azul
		width 60px
		float left
		img
			width 52px
				
			
	.titular
		margin 0 60px 0 100px
		.filtro
			color azul
			font-weight bold
			font-size 14px
			font-style italic
			text-decoration none
		.publicar
			background naranja
			color white
			float right
			margin -5px 1.2em 0 0
			padding 0.2em 0.5em
			text-decoration none
			text-shadow 1px 1px 0 black
			&:before
				display inline-block
				margin 0 3px 0 0
				font-family "icomoon"
				content: "\e908"
		.sizer
			text-decoration none
			
		.titulo
			font-size 1.1em
			font-weight normal
			margin 0
			padding 0
			
	.usuario
		position absolute
		top 8px
		right 10px
		
		.avatar	
			margin 0 1em 0 0
			position relative
			z-index 1
			img
				width 52px
				border-radius 50%
		.flechita
			background naranja
			color white
			display block
			padding 3px 4px
			position absolute
			text-align right
			right 0px
			top 15px
			width 50%
			text-decoration none
			&:before
				font-size 12pxFFO
				font-family "icomoon"
				content:"\e602"	
				text-shadow 1px 1px 0px black
									
nav
	background azul
	border-left 15px solid white
	position relative
	&:before
			border-left 10px solid white
			border-bottom 20px solid transparent
			border-top 20px solid transparent
			position absolute
			top 0
			left 0
			content ""
	
	.menu
		hidden 40px
		line-height 40px
		margin 0
		padding 0
		overflow-x auto
		white-space nowrap
		
		
		li
			display inline-block
			
			a
			
				color white
				display block
				margin 0 0.5em 
				padding 0.2em
				text-decoration none
				
.posts
	padding 0.5em
	
	
	.post
		background white
		border-radius 0 0 0.5em 0.5em
		color gris_text
		box-shadow 2px 2px 10px rgba(black,0.5)
		margin-bottom 1em
		
		.acciones 
			border-top 3px solid azul
			padding 0.5em
			overflow hidden
			
			.datos
				float right
				
				
				.comentarios
					background gris_texto
					border-radius 3px
					color white
					padding 2px 5px
					margin 0 1em 0 0
					text-decoration none
					position relative
					top -4px
					
					&:after
						content""	
						border-left 4px solid transparent
						border-top 6px solid gris_texto
						border-right 6px solid transparent		
						position absolute
						left 16px
						top 20px
						
				.estrellita
					text-decoration none
					&:before
						color #CED11C
						font-size 1.5em
						font-family "icomoon"
						content:"\e600"
						
			.votos
				float left
				
				.down
					text-decoration none
					color red
					&:before
						font-family "icomoon"
						font-size 1.5em
						content:"\e602"
						vertical-align bottom					
					
				.up 
					color green
					&:before
						font-family "icomoon"
						font-size 1.5em
						content:"\e601"
						vertical-align bottom
				.up 
					text-decoration none
				
		.descripcion
			color gris_texto
			
			.detalles
				height 160px
				margin-left 130px
				
				.autor
					margin 0.5em 0 2em 0
					
				.fecha
					 float right
					 margin 0 1em 0 0
						
				.tag 
					background azul
					color white
					border-radius 0.5em
					padding 0.2em 0.5em
					text-decoration none
					
				.titulo
					color gris_oscuro
					font-size 18px
					font-style italic
					padding 0.5em 0.5em 0 0
				
				
				
			.imagen
				float left
				margin 0
				padding 0
				
				img
					height 160px
					vertical-align top
					width 120px
					
@media screen and (min-width: 768px)
	header
		.titular
			.publicar
				position relative
				padding-left 3em
				
				&:before
					position absolute
					left 0
					top -14px
					font-size 2.8em
					transform rotate(-10deg)
					
		
		
	.posts
		.post
			display inline-block
			width 47%
			vertical-align top
			
			&:nth-child(odd)
				margin-right 2%
				margin-left 20px


	
				


	
			
					

			



	